@model IEnumerable<RealEstateApp.Models.RealtyAdDisplaySearchResult>

@{
    ViewBag.Title = "SearchResults";
}

<h2>SearchResults</h2>

<div class="row">
    <div class="col-sm-9 col-md-9 padding-less">
        @foreach (var item in Model)
{
    <div class="col-sm-4 col-md-3 padding-less">
        @*<div class="thumbnail col-sm-4 col-md-3">*@
        <div class="thumbnail padding-less pointed-border">
            <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="No Available Image" class="img-thumbnail border-less">
            
            @*<img src="/Content/images/img4eb38507c91fe0.24497459.jpg" alt="No Available Image" class="img-thumbnail border-less">*@
            @*<img src="~/Content/images/samsungGalaxyS4.jpg" alt="..." class="img-responsive">*@
            <div class="caption">
                <h5>@Html.DisplayFor(modelItem => item.ShortDescn)</h5>
                <p>P @Html.DisplayFor(modelItem => item.Price)</p>
                <p class="text-left">@Html.DisplayFor(modelItem => item.BedCount) bd, @Html.DisplayFor(modelItem => item.BathCount) bath(s)</p>
                <p><span class="glyphicon glyphicon-map-marker"></span> @Html.DisplayFor(modelItem => item.Address)</p>
            </div>
        </div>
    </div>
}
    </div>
</div>
