@model IEnumerable<RealEstateApp.Models.RealtyAdDisplaySearchResult>
@using RealEstateApp.Helpers

@{
    ViewBag.Title = "SearchResults";
}

<div class="row">
    <div class="col-md-12">
        <div class="well well-sm">
            <div class="row">
                <form class="form-inline col-md-12" role="form">
                    <div class="form-group col-sm-12 col-md-7 padding-less margin-less">
                        <div class="input-group">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default dropdown-toggle" data-toggle="dropdown" name="Realty">
                                    <span data-bind="label">For Rent</span> <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu pull-left">
                                    <li><a href="#">For Sale</a></li>
                                    <li><a href="#">For Rent</a></li>
                                    <li><a href="#">Bedspace</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Commercial</a></li>
                                </ul>
                            </div><!-- /btn-group -->
                            <input type="text" class="form-control" placeholder="Search for an Address, Neighborhood, or City" name="q">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                            </div>
                        </div><!-- /input-group -->
                    </div>

                    <div class="col-md-5 hidden-sm hidden-xs">
                        <div class="row">
                            <div class="form-group col-md-3 side-padding-sm">
                                <input type="text" class="form-control" placeholder="Min Price" />
                            </div>
                            <div class="form-group col-md-3 side-padding-sm">
                                <input type="text" class="form-control" placeholder="Max Price" />
                            </div>
                            <div class="form-group col-md-3 side-padding-sm">
                                <select class="form-control">
                                    <option>All Beds</option>
                                    <option>1+</option>
                                    <option>3+</option>
                                    <option>2+</option>
                                </select>
                            </div>
                            <div class="form-group col-sm-3 side-padding-sm left">
                                <button type="submit" class="btn btn-default">More Filters <span class="glyphicon glyphicon-chevron-down"></span></button>
                            </div>
                        </div>
                    </div>


                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-8 hidden-xs">
        <form class="form">
            <div class="form-group col-md-2 padding-less">
                
                <select class="form-control input-sm" name="Sort">
                    <option>Newest First</option>
                    <option>Cheapest First</option>
                    <option>Relevance</option>
                </select>
            </div class="form-group">
        </form>
    </div>
    <div class="col-sm-4 text-right hidden-xs">
        <p class="text-muted">30 Results</p>
    </div>
</div>
<hr class="margin-less" />
<br />

<div class="row">

    @foreach (var item in Model)
{
    <div class="col-sm-4 col-md-3">
        @Html.Partial("~/Views/Shared/_RealtyDisplayItemPartial.cshtml", @item)
    </div>
}
    
</div>


<div class="row">
    <div class="col-md-12">
        <div class="well well-sm text-center">
            <ul class="pagination margin-less">
                <li><a href="#">&laquo;</a></li>
                <li class="active"><a href="#">1<span class="sr-only">(current)</span></a></li>
                @for (var i = 2; i < 4; i++)
                {
                    <li><a href="#">@i.ToString() <span class="sr-only">(current)</span></a></li>
                }
                <li><a href="#">&raquo;</a></li>
            </ul>
        </div>
    </div>
</div>


@section scripts{
    <script type="text/javascript">

    </script>
}
