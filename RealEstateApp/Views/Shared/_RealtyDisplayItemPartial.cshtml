@model RealEstateApp.ViewModels.RealtyAdDisplayCompactViewModel

@{var itemDisplayUrl = String.Format("~/properties/{0}", Model.Id);}
<div class="thumbnail glow-hover thumbnail-add-bottom-margin">
    <a href="@Url.Content(itemDisplayUrl)">
        @*addl div is included to position the photo count div properly*@
        <div style="border:1px solid #dddddd; background-color:#dddddd">
            <div class="maintain-aspect-ratio-4-3"><img src="@Url.Content(Model.ImageUrl)" alt="No Available Image" class="img-thumbnail maintain-aspect-ratio border-less"></div>
            <div class="photo-count">2 Photos</div>
        </div>
        <div class="caption">
            @*<h5>@Html.DisplayFor(modelItem => Model.ShortDescn)</h5>*@
            <h4>&#8369 @Html.DisplayFor(modelItem => Model.Price)<small> / mo. </small><span class="label label-success">New</span></h4>
            <p class="small"><span class="glyphicon glyphicon-map-marker"></span> @Html.DisplayFor(modelItem => Model.Address)</p>
            <p class="small">
                @Html.DisplayFor(modelItem => Model.BedCount) bd | @Html.DisplayFor(modelItem => Model.BathCount) ba | @Html.DisplayFor(modelItem => Model.FloorAreaSqM) sqm
            </p>
        </div>
    </a>
</div>